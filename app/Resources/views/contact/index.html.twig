{% extends 'layout.html.twig' %}

{% block content %}
    {% for label, flashes in app.session.flashbag.all %}
        {% for flash in flashes %}
            <div class="alert alert-{{ label }}">
                {{ flash }}
            </div>
        {% endfor %}
    {% endfor %}
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="{% trans from "contact" %}Submit{% endtrans %}" class="btn btn-default pull-right" />
    {{ form_end(form) }}
{% endblock %}
